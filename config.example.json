{
  "_readme": "Copy this file to config.json and fill in your real values. Do not commit real keys to git.",
  "google": {
    "drive_folder_id": "REQUIRED_STRING_FROM_URL",
    "sheet_id": "REQUIRED_STRING_FROM_URL",
    "credentials_file": "credentials.json",
    "token_file": "token.json"
  },
  "sync": {
    "interval_minutes": 15,
